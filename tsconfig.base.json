{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,

    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@cw-rag-core/shared": ["packages/shared/src/index.ts"],
      "@cw-rag-core/retrieval": ["packages/retrieval/src/index.ts"],
      "@cw-rag-core/ingestion-sdk": ["packages/ingestion-sdk/src/index.ts"]
    }
  }
}
