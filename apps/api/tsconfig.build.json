{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",                           // local to apps/api
    "paths": {
      "@cw-rag-core/shared": ["../../packages/shared/dist/index.d.ts"],
      "@cw-rag-core/retrieval": ["../../packages/retrieval/dist/index.d.ts"],
      "@cw-rag-core/ingestion-sdk": ["../../packages/ingestion-sdk/dist/index.d.ts"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  },
  "references": [
    { "path": "../../packages/shared/tsconfig.build.json" },
    { "path": "../../packages/retrieval/tsconfig.build.json" }
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts", "**/__tests__/**", "src/**/__tests__/**"]
}
